<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

  <persistence-unit name="myPersistenceUnit" transaction-type="RESOURCE_LOCAL">
    <!-- Nếu dùng Hibernate làm provider -->
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <!-- Đăng ký entity (tùy chọn; nếu dùng classpath scanning có thể bỏ) -->
    <class>project.entity.User</class>
    <class>project.entity.Category</class>

    <properties>
      <!-- JDBC connection -->
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/quanlydanhmuc"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value="12345"/>

      <!-- Hibernate-specific (chỉnh theo phiên bản Hibernate bạn dùng) -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/> <!-- none | validate | update | create | create-drop -->
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>

      <!-- Optional: connection pool config nếu không dùng container (ví dụ HikariCP) -->
      <!-- <property name="hibernate.connection.pool_size" value="10"/> -->
    </properties>
  </persistence-unit>

</persistence>
